<Window x:Class="SectionCutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SectionCutter"
        Title="Section Cutter 2" Height="1000" Width="1200"
        WindowStartupLocation="CenterScreen" Background="White">


    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#ff8c69"/>
        <SolidColorBrush x:Key="DefaultIconBg" Color="Black"/>
        <SolidColorBrush x:Key="DefaultText" Color="White"/>
        <Style x:Key="HoverAccentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Icon Panel -->
        <StackPanel x:Name="IconPanel" Grid.Column="0" Background="{StaticResource DefaultIconBg}" Orientation="Vertical">
            <!-- Section Cuts Icon -->
            <Border x:Name="SectionCutsIconBorder" BorderThickness="2" Margin="5" BorderBrush="Transparent" CornerRadius="4">
                <Button x:Name="SectionCutsBtn" Width="40" Height="40"
                        Background="Transparent" BorderBrush="Transparent"
                        ToolTip="Create Section Cuts" Click="CreateSectionCut_Click">
                    <TextBlock Text="|||"
                               Foreground="{StaticResource DefaultText}"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
            </Border>

            <!-- Review Results Icon -->
            <Border x:Name="ReviewResultsIconBorder" BorderThickness="2" Margin="5" BorderBrush="{StaticResource AccentBrush}">
                <Button x:Name="ReviewResultsBtn" Width="40" Height="40"
                        Background="Transparent" BorderBrush="Transparent"
                        ToolTip="Review Results" Click="ReviewResults_Click">
                    <TextBlock Text="VPM"
                               Foreground="{StaticResource DefaultText}"
                               FontWeight="Bold"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
            </Border>

            <!-- Sidebar Toggle -->
            <Button Width="40" Height="40" Margin="5"
                    Click="ToggleSidebarBtn_Click"
                    Background="Transparent" BorderBrush="Transparent"
                    ToolTip="Toggle Sidebar">
                <TextBlock Text="⮞" FontSize="16" Foreground="White"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <!-- Sidebar -->
        <StackPanel x:Name="Sidebar" Grid.Column="1" Background="Black" Orientation="Vertical">
            <TextBlock Text="Section Cutter Tool" Margin="10"
                       Foreground="White" FontWeight="Bold" FontSize="14"/>
            <Button x:Name="SectionCutsSidebarBtn" Content="Create Section Cuts"
                    Margin="10" Height="40"
                    Foreground="White" Background="Black"
                    FontWeight="Bold" BorderThickness="0"
                    Click="CreateSectionCut_Click"/>

            <Button x:Name="ReviewResultsSidebarBtn" Content="Review Results"
                    Margin="10" Height="40"
                    Foreground="White" Background="{StaticResource AccentBrush}"
                    FontWeight="Bold" BorderThickness="0"
                    Click="ReviewResults_Click"/>
        </StackPanel>

        <!-- Create Section Cuts Content -->
        <Grid Grid.Column="2" Name="CreateSectionCutsGrid" Background="White" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row 0: Title -->
                <RowDefinition Height="Auto"/>
                <!-- Row 1: Selections + Vector -->
                <RowDefinition Height="Auto"/>
                <!-- Row 2: Prefix + Depth -->
                <RowDefinition Height="Auto"/>
                <!-- Row 3: Cuts + Units + Create -->
                <RowDefinition Height="*"/>
                <!-- Row 4: NEW - Results + Plot -->
            </Grid.RowDefinitions>

            <!-- Title and Divider -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock Text="Create Section Cuts"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="0,0,0,10"
                   Padding="10,0,0,0"/>
                <Border Height="1" Background="LightGray" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- User Selection Group with Overlapping Label -->
                <Grid Grid.Column="0" Margin="10,10,0,0">
                    <Border Background="#fff"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Panel.ZIndex="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Get Start Node -->
                            <StackPanel Grid.Column="0">
                                <Button Content="Get Start Node"
                                    Style="{StaticResource HoverAccentButton}"
                                    Command="{Binding GetStartNodeCommand}"
                                    Height="35"
                                    Margin="5,5,5,5"/>
                                <TextBlock x:Name="StartNodeOutput"
                                   Text="{Binding StartNodeOutputText}"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"/>
                                
                            </StackPanel>

                            <!-- Get Areas -->
                            <StackPanel Grid.Column="1">
                                <Button Content="Get Areas"
                                    Style="{StaticResource HoverAccentButton}"
                                    Command="{Binding GetAreasCommand}"
                                    Height="35"
                                    Margin="5"/>
                                <TextBlock x:Name="AreasOutput"
                                   Text="{Binding AreasOutputText}"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Overlapping Label for User Selection -->
                    <TextBlock Text="User Selection"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="10,-10,0,0"
                       Padding="2,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
                </Grid>

                <!-- Input Vector Group with Overlapping Label -->
                <Grid Grid.Column="1" Margin="10,10,10,0">
                    <Border Background="#fff"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Panel.ZIndex="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- X Vector -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="X Vector" FontWeight="Bold" Margin="5,0,0,5"/>
                                <TextBox x:Name="XVectorInput"
                                     Text= "{Binding SectionCut.XVector, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30"
                                     PreviewTextInput="DecimalInput_PreviewTextInput"
                                     BorderBrush="Gray" BorderThickness="1" Padding="5"/>
                            </StackPanel>

                            <!-- Y Vector -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Y Vector" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="YVectorInput"
                                     Text= "{Binding SectionCut.YVector, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30"
                                     PreviewTextInput="DecimalInput_PreviewTextInput"
                                     BorderBrush="Gray" BorderThickness="1" Padding="5"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Overlapping Label for Input Vector -->
                    <TextBlock Text="Input Vector"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="10,-10,0,0"
                       Padding="2,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
                </Grid>
                
            </Grid>
            <!-- New Row for Section Cut Title & Depth -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Section Cut Title -->
                <Grid Grid.Column="0" Margin="10,10,0,0">
                    <Border Background="#fff"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        Panel.ZIndex="0">
                        <StackPanel>
                            <TextBox x:Name="SectionCutTitleInput"
                                 Text="{Binding SectionCut.SectionCutPrefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 BorderBrush="Gray"
                                 BorderThickness="1"
                                 Padding="5" />
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Sections Cut Prefix"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="10,-10,0,0"
                       Padding="2,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
                </Grid>

                <!-- Section Cut Depth -->
                <Grid Grid.Column="1" Margin="10,10,10,0">
                    <Border Background="#fff"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Height Above -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Height Above" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="HeightAboveInput"
                                     Text="{Binding SectionCut.HeightAbove, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30"
                                     BorderBrush="Gray"
                                     BorderThickness="1"
                                     Padding="5"
                                     PreviewTextInput="DecimalInput_PreviewTextInput"/>
                            </StackPanel>

                            <!-- Height Below -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Height Below" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="HeightBelowInput"
                                     Text="{Binding SectionCut.HeightBelow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30"
                                     BorderBrush="Gray"
                                     BorderThickness="1"
                                     Padding="5"
                                     PreviewTextInput="DecimalInput_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TextBlock Text="Section Cut Depth"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="10,-10,0,0"
                       Padding="2,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
                </Grid>
            </Grid>
            <!-- Number of Section Cuts + Units -->
            <Grid Grid.Row="3" Margin="10,10,10,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Section Cut Count -->
                <Grid Grid.Column="0">
                    <Border Background="#fff"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="0">
                        <StackPanel Orientation="Vertical">
                            <TextBox x:Name ="SectionCutCountInput"
                                 Text="{Binding SectionCut.NumberOfCuts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 BorderBrush="Gray"
                                 BorderThickness="1"
                                 Padding="5"
                                 PreviewTextInput="PositiveIntegerInput_PreviewTextInput"
                                 MaxLength="4"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Number of Section Cuts"
                        FontWeight="Bold"
                        FontSize="14"
                        Background="White"
                        Foreground="Black"
                        Margin="10,-10,0,0"
                        Padding="2,0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Panel.ZIndex="1"/>
                </Grid>

                <!-- Units Selection -->
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Border Background="#fff"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        Panel.ZIndex="0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <CheckBox x:Name="KipFtCheckBox"
                      Content="kip, ft"
                      IsChecked="True"
                      Checked="KipFtCheckBox_Checked"
                      Margin="0,0,10,0"/>
                            <CheckBox x:Name="KnMCheckBox"
                      Content="kN, M"
                      IsChecked="False"
                      Checked="KnMCheckBox_Checked"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Units"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="10,-10,0,0"
                       Padding="2,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
                </Grid>
                <!-- Create Sections Button -->
                <Grid Grid.Column="2" Margin="10,0,0,0">
                    <Border Background="#fff"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        HorizontalAlignment="Stretch">
                        <Button x:Name="CreateSectionsButton"
                                    Command="{Binding CreateCommand}"
                                    IsEnabled="{Binding CanCreate}"
                                    Content="Create Sections"
                                    Height="30"
                                    FontWeight="Bold"
                                    Background="Gray"
                                    Foreground="White"
                                    BorderThickness="0"
                                    />
                    </Border>
                </Grid>
            </Grid>
            <!-- ================================================== -->
            <!-- NEW Row 4: Section Cuts Created + Details + Plot -->
            <!-- ================================================== -->
            <Border Grid.Row="4"
            Margin="10,0,10,10"
            Padding="12"
            Background="White"
            CornerRadius="8"
            BorderBrush="LightGray"
            BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- title -->
                        <RowDefinition Height="Auto"/>
                        <!-- dropdown -->
                        <RowDefinition Height="Auto"/>
                        <!-- start node + vector -->
                        <RowDefinition Height="Auto"/>
                        <!-- lists -->
                        <RowDefinition Height="*"/>
                        <!-- plot -->
                    </Grid.RowDefinitions>

                    <!-- Title and Divider -->
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <TextBlock Text="Section Cuts Created"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,10"
                           Padding="10,0,0,0"/>
                        <Border Height="1" Background="LightGray" HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Dropdown -->
                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Created Section Cut Set"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding SectionCutPrefixes}"
                          SelectedItem="{Binding SelectedPrefix}"
                          Height="30"/>
                    </StackPanel>

                    <!-- Start node + vector -->
                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start Node ID" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SavedSectionCut.StartNodeId}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Vector Direction" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SavedSectionCut.VectorLabel}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Area / Opening lists -->
                    <Grid Grid.Row="3" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Area IDs" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="6">
                                <ScrollViewer Height="50" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding SavedSectionCut.AreaIds}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="6,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Opening IDs" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="6">
                                <ScrollViewer Height="50" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding SavedSectionCut.OpeningIds}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="6,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Plot container (clips panning/zooming to this box) -->
                    <Border Grid.Row="4"
                        Margin="0,14,0,0"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="#FAFAFA"
                        ClipToBounds="True"
                        SnapsToDevicePixels="True">

                        <local:SectionCutPreviewControl
                            PlotBackground="#FAFAFA"
                            Areas="{Binding SavedSectionCut.AreaPolygons}"
                            Openings="{Binding SavedSectionCut.OpeningPolygons}"
                            Cuts="{Binding SavedSectionCut.Cuts}" />
                    </Border>
                </Grid>
            </Border>
        </Grid>


        <!-- Review Results Content test -->
        <Grid Grid.Column="2" Name="ReviewResultsGrid" Background="White" Visibility="Collapsed">
            <TextBlock Text="Review Results"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="20" Foreground="Black"/>
        </Grid>
    </Grid>
</Window>